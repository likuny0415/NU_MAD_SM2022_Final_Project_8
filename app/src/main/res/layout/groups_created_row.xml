<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E4CBCB"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/textViewSkiCGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/skiResortCGroup"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewAvatarNameCGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/hostNameCGroup"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatarCGroup"
                app:layout_constraintStart_toEndOf="@+id/imageViewAvatarCGroup"
                app:layout_constraintTop_toTopOf="@+id/imageViewAvatarCGroup" />

            <TextView
                android:id="@+id/textViewDateCGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/dateCGroup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageViewAvatarCGroup"
                app:layout_constraintTop_toBottomOf="@+id/textViewAvatarNameCGroup" />

            <TextView
                android:id="@+id/textViewJoinedCGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/joinedJGroup"
                app:layout_constraintBottom_toBottomOf="@+id/textViewDateCGroup"
                app:layout_constraintStart_toEndOf="@+id/textViewDateCGroup"
                app:layout_constraintTop_toTopOf="@+id/textViewDateCGroup" />

            <ImageView
                android:id="@+id/imageViewAvatarCGroup"
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@+id/textViewSkiCGroup"
                app:layout_constraintTop_toBottomOf="@+id/textViewSkiCGroup"
                app:srcCompat="@drawable/googleg_standard_color_18" />

            <Button
                android:id="@+id/buttonEditCGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:text="@string/editCGroup"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewOutOfCGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/outOfCGroup"
                app:layout_constraintBottom_toBottomOf="@+id/textViewJoinedCGroup"
                app:layout_constraintStart_toEndOf="@+id/textViewJoinedCGroup"
                app:layout_constraintTop_toTopOf="@+id/textViewJoinedCGroup" />

            <TextView
                android:id="@+id/textViewCapacityCGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/capacityCGroup"
                app:layout_constraintBottom_toBottomOf="@+id/textViewOutOfCGroup"
                app:layout_constraintStart_toEndOf="@+id/textViewOutOfCGroup"
                app:layout_constraintTop_toTopOf="@+id/textViewOutOfCGroup" />

            <Button
                android:id="@+id/buttonDeleteCGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deleteCGroup"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/buttonEditCGroup"
                app:layout_constraintStart_toStartOf="@+id/buttonEditCGroup"
                app:layout_constraintTop_toBottomOf="@+id/buttonEditCGroup" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</FrameLayout>