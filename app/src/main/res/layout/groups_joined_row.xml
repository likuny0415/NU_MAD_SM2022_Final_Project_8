<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#B4D8E8"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/joinedGroupListTextViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/joinedGroupListImageViewAvatar"
                app:layout_constraintStart_toEndOf="@+id/joinedGroupListImageViewAvatar"
                app:layout_constraintTop_toTopOf="@+id/joinedGroupListImageViewAvatar" />

            <TextView
                android:id="@+id/joinedGroupListTextViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/joinedGroup_text_date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/joinedGroupListImageViewAvatar"
                app:layout_constraintTop_toBottomOf="@+id/joinedGroupListTextViewName" />

            <TextView
                android:id="@+id/joinedGroupListTextViewJoined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/joinedGroup_text_joined"
                app:layout_constraintBottom_toBottomOf="@+id/joinedGroupListTextViewDate"
                app:layout_constraintStart_toEndOf="@+id/joinedGroupListTextViewDate"
                app:layout_constraintTop_toTopOf="@+id/joinedGroupListTextViewDate" />

            <ImageView
                android:id="@+id/joinedGroupListImageViewAvatar"
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/joinedGroupListTextViewMountain"
                app:layout_constraintTop_toBottomOf="@+id/joinedGroupListTextViewMountain" />

            <TextView
                android:id="@+id/joinedGroupListTextViewOutOf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/joinedGroup_text_outOf"
                app:layout_constraintBottom_toBottomOf="@+id/joinedGroupListTextViewJoined"
                app:layout_constraintStart_toEndOf="@+id/joinedGroupListTextViewJoined"
                app:layout_constraintTop_toTopOf="@+id/joinedGroupListTextViewJoined" />

            <TextView
                android:id="@+id/joinedGroupListTextViewTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/joinedGroup_text_capacity"
                app:layout_constraintBottom_toBottomOf="@+id/joinedGroupListTextViewOutOf"
                app:layout_constraintStart_toEndOf="@+id/joinedGroupListTextViewOutOf"
                app:layout_constraintTop_toTopOf="@+id/joinedGroupListTextViewOutOf" />

            <Button
                android:id="@+id/joinedGroupListButtonQuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/joinedGroup_button_quit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/joinedGroupListButtonDetail"
                app:layout_constraintTop_toBottomOf="@+id/joinedGroupListButtonDetail" />

            <TextView
                android:id="@+id/joinedGroupListTextViewMountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/joinedGroupListButtonDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:text="@string/joinedGroup_button_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</FrameLayout>

